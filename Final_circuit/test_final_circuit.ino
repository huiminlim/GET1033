// Declaration for an OLED (SSD1306) display connected to I2C (SDA, SCL pins)
#define OLED_RESET 4
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

// Define Analog input for IR Sensor
#define irPin A0

void setup() {
  // Initialise all pins for push button, IR sensor, and LED
  pinMode(irPin, INPUT);

  // OLED Screen - protocol of I2C, follow tutorial for detailed guide
  // Address 0x3C for 128x64 OLED used in this prototype
  // Check address, using method shared in the tutorial
  
  // This is to select the OLED to listen to the Arduino
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { 
    Serial.println(F("SSD1306 allocation failed"));
    for(;;); // Don't proceed, loop forever
  }

  // Clean the screen up, to a blank screen
  display.clearDisplay();
  display.display();
  delay(1000);

  // Serial Monitor 
  Serial.begin(9600);
}

void loop() {
  // Read IR Sensor reading
  int ir = analogRead(irPin);
  Serial.println(ir);
  
  // If mail is received
  // Alert User using OLED screen
  if(ir > 85) drawOLEDScreen();
  else stopOLEDScreen();
}

// Screen displays Mail logo
// Flashes 2s and blanks for 0.5s
void drawOLEDScreen(void){
  // Draws the Mail for 2s
  display.drawBitmap(0, 0, myMail, 128, 64, 1);
  display.display();
  delay(2000);

  // Blank screen for 1s
  display.clearDisplay();
  display.display();
  delay(1000);
}

void stopOLEDScreen(void){
  // Blank screen
  display.clearDisplay();
  display.display();
  delay(1000);
}
